# Copy this file to `.env` and populate the values to run locally.

# Telegram bot token provided by BotFather
TELEGRAM_BOT_TOKEN=

# OpenAI API key
OPENAI_API_KEY=

# Optional: database URL (e.g. postgres://user:pass@host:port/dbname)
# Leave empty to fall back to a local SQLite database
DATABASE_URL=

# Starting token balance for new users
START_BONUS=10

# Bonus granted to both referrer and referred user after the referred user completes their first generation
REF_BONUS=10

# Cost of a single generation request
GENERATE_COST=1

# Cool-down period between user messages in seconds to prevent spam
COOLDOWN_SECONDS=5

# Comma-separated list of Telegram user IDs allowed to use the bot
# Leave empty to allow all users
ALLOWED_USER_IDS=
